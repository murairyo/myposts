<div class="contentBlock">
    
    <h1>詳細画面</h1>
    <p class="content">内容: <%= @mypost.content %></p>
    <% unless @mypost.user == current_user %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除する', favorite_path(mypost_id: @mypost.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(mypost_id: @mypost.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    <span class="mypostsLink"><%= link_to "一覧画面にもどる", myposts_path %></span>
</div>
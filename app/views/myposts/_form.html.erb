<div class="contentBlock">
  <%= form_with(model: @mypost, local: true,url: choose_new_or_edit) do |form| %>
      <% if @mypost.errors.any? %>
          <div class="error_explanation">
            <h2><%= @mypost.errors.count %>件のエラーがあります。</h2>
            <ul>
                <% @mypost.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
            </ul>
          </div>
      <% end %>
    <div class="mypost">
      <h1><%= form.label :新規登録 %></h1>
      <p class="inputBox"><%= form.text_field :content %></p>
    </div>
    <%= form.submit "投稿する" ,:class=>"submitBtn" %>
  <% end %>

<span class="mypostsLink"><%= link_to "一覧画面にもどる", myposts_path %></span>
</div>